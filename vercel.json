{
  "buildCommand": "turbo run build --filter=web",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet . ./apps/web",
  "functions": {
    "src/app/api/cron/daily-event-generation/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/check-notifications/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-event-generation",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/check-notifications", 
      "schedule": "0 12 * * *"
    }
  ]
}